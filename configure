#!/bin/sh

while [ $# -ne 0 ]; do
    case $1 in
        --with-compiler=*)
            v=`${1#--with-compiler=} --numeric-version`
            libdir=`${1#--with-compiler=} --print-libdir`
            cat > skb.buildinfo <<EOF
extra-libraries: HSrts-ghc$v
extra-lib-dirs: ${libdir}/rts
EOF
            break
            ;;
        *)
            shift
    esac
done
