#!/bin/sh

echo "in configure"
while [ $# -ne 0 ]; do
    case $1 in
        --with-compiler=*)
            echo "in configure with compiler"
            v=`${1#--with-compiler=} --numeric-version`
            cat > skb.buildinfo <<EOF
extra-libraries: HSrts-ghc$v
EOF
            break
            ;;
        *)
            shift
    esac
done
